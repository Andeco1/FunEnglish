<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvVocabTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Словарь"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Spinner для выбора группы -->
    <Spinner
        android:id="@+id/spinnerGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/vocab_groups"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvVocabTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Список слов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerGroups"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnTestVocab"/>

    <!-- Кнопка “Пройти тест” -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTestVocab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Пройти тест"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rvWords"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
